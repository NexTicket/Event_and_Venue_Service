generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  firebaseUid String?  @unique
  venues      Venue[]
}

model Venue {
  id       Int     @id @default(autoincrement())
  name     String
  seatMap  Json
  tenantId Int
  capacity Int?
  location String?
  image    String?
  tenant   Tenant  @relation(fields: [tenantId], references: [id])
  ownerUid String? @unique
}

model events {
  id          BigInt    @id @default(autoincrement())
  tenantId    Int
  title       String
  description String
  category    String
  type        String
  startDate   DateTime
  endDate     DateTime?
  created_at  DateTime? @db.Timestamptz(6)
}
